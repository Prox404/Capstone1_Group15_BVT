<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/inter</item>
    </style>
    <style name="RadioButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/theme_app</item>
    </style>
    <style name="Widget.App.Button" parent="@android:style/Theme.Holo.Light">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">7dp</item>
    </style>
    <style name="Widget.App.SecondaryButton" parent="@android:style/Theme.Holo.Light">
        <item name="android:background">@drawable/button_secondary_bg</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">7dp</item>
    </style>
    <style name="Widget.App.RoundedButton" parent="@android:style/Theme.Holo.Light">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>

    </style>
    <style name="Widget.App.RoundedEditText" parent="@android:style/Theme.Holo.Light">
        <item name="android:background">@drawable/rounded_input_bg</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="Widget.App.RoundedSolidEditText" parent="@android:style/Theme.Holo.Light">
        <item name="android:background">@drawable/rounded_solid_input_bg</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="Widget.App.EditText" parent="@android:style/Theme.Holo.Light">
        <item name="android:background">@drawable/login_input_bg</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="Widget.AppCompat.TextView.Title" parent="@android:style/Theme.Holo.Light">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">36sp</item>
    </style>
    <style name="Widget.AppCompat.TextView.Heading2" parent="@android:style/Theme.Holo.Light">
        <item name="android:textColor">#4B4B4B</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.AppCompat.TextView.Heading3" parent="@android:style/Theme.Holo.Light">
        <item name="android:textColor">#4B4B4B</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="Widget.AppCompat.TextView.Label" parent="@android:style/Theme.Holo.Light">
        <item name="android:textColor">#4B4B4B</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>