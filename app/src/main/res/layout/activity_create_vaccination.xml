<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical"
    android:paddingTop="10dp"
    tools:context=".create_vaccination">

    <ImageView
        android:id="@+id/image_back"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:tint="#000000"
        app:srcCompat="@drawable/back_arrow" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:text="Thêm mới vắc-xin "
        android:textColor="#007F20"
        android:textSize="34sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_white"
            android:orientation="vertical"
            android:padding="10dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scrollbarStyle="outsideInset"
                android:scrollbars="" />

            <Button
                android:id="@+id/img_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#36BD5E"
                android:text="Thêm mới ảnh" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin vắc-xin"
                    android:textColor="#4B4B4B"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Tên vaccine"
                    android:textColor="#686868" />

                <EditText
                    android:id="@+id/vaccine_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/home"
                    android:ems="10"
                    android:gravity="top"
                    android:inputType="text|textMultiLine"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hiệu quả"
                    android:textColor="#686868" />

                <Spinner
                    android:id="@+id/vaccine_type"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/home" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phản ứng sau tiêm"
                    android:textColor="#686868" />

                <EditText
                    android:id="@+id/post_vaccination_reactions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/home"
                    android:ems="10"
                    android:gravity="top"
                    android:inputType="text|textMultiLine"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nguồn gốc"
                    android:textColor="#686868" />

                <EditText
                    android:id="@+id/origin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/home"
                    android:ems="10"
                    android:gravity="top"
                    android:inputType="text|textMultiLine"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nhóm tuổi sử dụng"
                    android:textColor="#686868" />

                <EditText
                    android:id="@+id/vaccination_target_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/home"
                    android:ems="10"
                    android:gravity="top"
                    android:inputType="text|textMultiLine"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chống chỉ định"
                    android:textColor="#686868" />

                <EditText
                    android:id="@+id/contraindications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/home"
                    android:ems="10"
                    android:gravity="top"
                    android:inputType="text|textMultiLine"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số lượng"
                    android:textColor="#686868" />

                <EditText
                    android:id="@+id/quantity"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/home"
                    android:ems="10"
                    android:inputType="number"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Liều "
                    android:textColor="#686868" />

                <EditText
                    android:id="@+id/dosage"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/home"
                    android:inputType="number"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đơn vị"
                    android:textColor="#686868" />

                <EditText
                    android:id="@+id/unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/home"
                    android:ems="10"
                    android:gravity="top"
                    android:inputType="text|textMultiLine"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngày nhập cảnh "
                    android:textColor="#686868" />

                <EditText
                    android:id="@+id/date_of_entry"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/home"
                    android:ems="10"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giá"
                    android:textColor="#686868" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="7"
                        android:background="@drawable/home"
                        android:ems="10"
                        android:inputType="number"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_tt"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#36BD5E"
                    android:text="Thêm mới vắc-xin"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="5dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>