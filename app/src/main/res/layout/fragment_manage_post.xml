<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    android:padding="20dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".Fragment_manage_post">

    <ScrollView
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <TextView
                style="@style/Widget.AppCompat.TextView.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Quản lý bài đăng" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/buttonNoidungbaocao"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@drawable/tool_white_bg"
                    android:backgroundTint="#03A9F4"
                    android:elevation="10dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_chart"
                            app:tint="@color/white" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:fontFamily="@font/inter_bold"
                        android:maxWidth="150dp"
                        android:text="Báo cáo\nchi tiết"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                </LinearLayout>
            </LinearLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:alignContent="stretch"
                android:clipChildren="false"
                android:clipToPadding="false"
                app:alignItems="stretch"
                app:flexWrap="wrap"
                app:justifyContent="space_between">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingRight="10dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    app:layout_flexBasisPercent="50%">

                    <LinearLayout
                        android:id="@+id/buttonThemBaiDang"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="@drawable/tool_white_bg"
                        android:elevation="10dp"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_add"
                                app:tint="@color/textColor" />
                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:fontFamily="@font/inter_bold"
                            android:maxWidth="150dp"
                            android:text="Thêm bài đăng"
                            android:textAlignment="textEnd"
                            android:textColor="@color/textColor"
                            android:textSize="20sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    app:layout_flexBasisPercent="50%">

                    <LinearLayout
                        android:id="@+id/buttonXemBaiDang"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="@drawable/tool_white_bg"
                        android:elevation="10dp"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_eye"
                                app:tint="@color/textColor" />
                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:fontFamily="@font/inter_bold"
                            android:maxWidth="150dp"
                            android:text="Xem bài đăng"
                            android:textAlignment="textEnd"
                            android:textColor="@color/textColor"
                            android:textSize="20sp" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:paddingRight="10dp"
                    app:layout_flexBasisPercent="50%">

                    <LinearLayout
                        android:id="@+id/buttonXoaBaiDang"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="@drawable/tool_white_bg"
                        android:elevation="10dp"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/trash"
                                app:tint="@color/textColor" />
                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:fontFamily="@font/inter_bold"
                            android:maxWidth="150dp"
                            android:text="Xóa bài đăng"
                            android:textAlignment="textEnd"
                            android:textColor="@color/textColor"
                            android:textSize="20sp" />

                    </LinearLayout>
                </LinearLayout>

            </com.google.android.flexbox.FlexboxLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


