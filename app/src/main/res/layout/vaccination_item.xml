<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:background="@drawable/vaccine_item_bg"
        android:orientation="horizontal"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/babyAvatarImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vaccineNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Tên Vaccine"
                android:textColor="@color/textColorTitle" />

            <TextView
                android:id="@+id/babyNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên bé" />

            <TextView
                android:id="@+id/babyBirthdayTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày sinh" />

            <TextView
                android:id="@+id/congenitalDiseaseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bệnh bẩm sinh" />

            <TextView
                android:id="@+id/vaccineCenterNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên trung tâm vaccine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Some Action" />

                <Button
                    android:id="@+id/buttonAction2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Some Action"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>