<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Register_for_vaccine_center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/image_back_register_account_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_arrow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng ký"
                android:textColor="#007F20"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:text="Hãy nhập thông tin "
                android:textColor="#3B3B3B"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#686868" />

            <EditText
                android:id="@+id/register_edt_center_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/home"
                android:ems="10"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mật khẩu"
                android:textColor="#686868" />

            <EditText
                android:id="@+id/register_edt_center_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/home"
                android:ems="10"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nhập lại mật khẩu"
                android:textColor="#686868" />

            <EditText
                android:id="@+id/register_edt_center_re_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/home"
                android:ems="10"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên trung tâm Vắc-xin:"
                android:textColor="#686868" />

            <EditText
                android:id="@+id/register_edt_center_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/home"
                android:ems="10"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chứng chỉ hoạt động"
                android:textColor="#686868" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/register_img_btn_activity_certificate"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:src="@drawable/catch_image" />

                <TextView
                    android:id="@+id/tv_center_chungchi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Chọn ảnh chứng chỉ "
                    android:textColor="#4B4B4B"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Địa chỉ"
                android:textColor="#686868"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tỉnh/ Thành phố"
                android:textColor="#686868" />

            <Spinner
                android:id="@+id/Register_spn_provinces"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/home" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quận/ Huyện"
                android:textColor="#686868" />

            <Spinner
                android:id="@+id/Register_spn_districts"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/home" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phường/ xã"
                android:textColor="#686868" />

            <Spinner
                android:id="@+id/Register_spn_wards"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/home" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotline"
                android:textColor="#686868" />

            <EditText
                android:id="@+id/register_edt_hotline"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/home"
                android:ems="10"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thời gian làm việc"
                android:textColor="#686868"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Các ngày trong tuần"
                android:textColor="#686868" />

            <RadioGroup
                android:id="@+id/register_work_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Thứ 2 đến thứ 6" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thứ 2 đến thứ 7" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cả tuần" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giờ làm việc"
                android:textColor="#686868" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/register_radio_all_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Mở cửa cả ngày" />

                <RadioButton
                    android:id="@+id/register_radio_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thời gian hoạt động" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/register_selected_hour_minute"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/register_tv_time_begin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="Bắt đâu làm " />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/register_tv_time_end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="Tan làm" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ảnh bệnh viện"
                android:textColor="#686868" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/register_img_btn_center_image"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:src="@drawable/catch_image" />

                <TextView
                    android:id="@+id/tv_center_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Thêm ảnh bệnh viện"
                    android:textColor="#4B4B4B"
                    android:textStyle="bold" />
            </RelativeLayout>

            <Button
                android:id="@+id/register_btn_register"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="#4CAF50"
                android:text="Đăng ký"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="5dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>