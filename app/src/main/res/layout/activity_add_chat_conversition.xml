<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".AddChatConversition">

    <TextView
        android:id="@+id/textView3"
        style="@style/Widget.AppCompat.TextView.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Thêm đoạn chat mới"
        android:textSize="32dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_chat_search"
        style="@style/Widget.App.RoundedEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Tìm kiếm"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Địa chỉ" />

        <TextView
            android:id="@+id/tv_chat_center_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_chat_display_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Hiển thị tất cả" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chat_list_vaccine_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>