<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/vaccine_horizontal_bg"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imgchinh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxHeight="200dp"
                android:minHeight="150dp"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|left"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên vaccine" />

        <TextView
            android:id="@+id/txtXuatXu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xuất xứ" />

        <TextView
            android:id="@+id/textViewVaccineCenterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên trung tâm"
            android:textAlignment="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:textAlignment="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtgia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá " />

    </LinearLayout>


</LinearLayout>