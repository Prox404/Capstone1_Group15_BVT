<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/vaccine_horizontal_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/vaccine_item_bg"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imgchinh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxHeight="200dp"
                    android:minHeight="150dp"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|left"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Tên vaccine"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtXuatXu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xuất xứ" />

            <TextView
                android:id="@+id/textViewVaccineCenterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên trung tâm"
                android:textAlignment="center"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textViewAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ"
                android:textAlignment="center"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtgia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá " />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>