<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".schedule_an_injection_search_vaccine_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#4CAF50"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/schedule_image_back_vaccine2"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/baseline_arrow_back_ios_24" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Tìm kiếm Vắc-xin"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/schedule_edt_search_vaccine2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Tìm kiếm"
        android:inputType="text" />

    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Some text"
        android:visibility="gone" />

    <Button
        android:id="@+id/buttonClearFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Huỷ lọc" />

    <ListView
        android:id="@+id/schedule_list_vaccine"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>