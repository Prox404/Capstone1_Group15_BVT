<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vaccine_id"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/vaccine_item_bg"
        android:gravity="center|top"
        android:orientation="vertical"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardBackgroundColor="#EFEFEF"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imgchinh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxHeight="200dp"
                android:minHeight="150dp"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/inter_semibold"
            android:text="Tên vaccine"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txtXuatXu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xuất xứ"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewVaccineCenterName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Tên trung tâm"
            android:textAlignment="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:textAlignment="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtgia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá "
            android:textAlignment="center" />

    </LinearLayout>


</LinearLayout>