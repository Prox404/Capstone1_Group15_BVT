<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical"
    tools:context=".update_inforamtion_vaccine">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp">

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_gravity="center|left"
            android:src="@drawable/baseline_arrow_back_ios_24"
            app:tint="@color/textColor" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="Cập nhập vắc-xin"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btn_update_new_information"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_check"
            app:tint="@android:color/holo_blue_dark" />

    </LinearLayout>

    <!--    <ImageView-->
    <!--        android:id="@+id/image_back"-->
    <!--        android:layout_width="45dp"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginTop="5dp"-->
    <!--        android:layout_marginBottom="5dp"-->
    <!--        android:tint="#000000"-->
    <!--        app:srcCompat="@drawable/back_arrow" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="20dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/update_recyclerview_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="vertical" />

            <Button
                android:id="@+id/btn_add_new_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#36BD5E"
                android:text="Thêm ảnh mới"
                app:cornerRadius="5dp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên vắc-xin"
                android:textColor="#686868"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/update_vaccine_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home"
                android:ems="10"
                android:gravity="top"
                android:inputType="text|textMultiLine"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hiệu quả"
                android:textColor="#686868"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinner_vac_effectiveness"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/home" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phản ứng sau tiêm"
                android:textColor="#686868"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/update_post_vaccination_reactions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home"
                android:ems="10"
                android:gravity="top"
                android:inputType="text|textMultiLine"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguồn gốc"
                android:textColor="#686868"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/update_orgin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home"
                android:ems="10"
                android:gravity="top"
                android:inputType="text|textMultiLine"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhóm tuổi sử dụng"
                android:textColor="#686868"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/update_vaccination_target_group"
                style="@style/Widget.App.RoundedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home"
                android:ems="10"
                android:gravity="top"
                android:inputType="text|textMultiLine"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chống chỉ định"
                android:textColor="#686868"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/update_contraindications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home"
                android:ems="10"
                android:gravity="top"
                android:inputType="text|textMultiLine"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng"
                android:textColor="#686868"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/update_quantity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/home"
                android:ems="10"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liều"
                android:textColor="#686868"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/update_dosage"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/home"
                android:ems="10"
                android:inputType="number|numberDecimal|numberSigned"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đơn vị"
                android:textColor="#686868"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/update_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home"
                android:ems="10"
                android:gravity="top"
                android:inputType="text|textMultiLine"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày nhập cảnh"
                android:textColor="#686868"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/update_date_of_entry"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/home"
                android:ems="10"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá"
                android:textColor="#686868"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/update_price"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="7"
                    android:background="@drawable/home"
                    android:ems="10"
                    android:inputType="number"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" />

                <Spinner
                    android:id="@+id/spinner_update_money_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="0dp">

                    <Button
                        android:id="@+id/btn_delete"
                        android:layout_width="65dp"
                        android:layout_height="70dp"
                        android:backgroundTint="#fa897b"
                        android:paddingLeft="6dp"
                        android:paddingRight="0dp"
                        app:icon="@drawable/ic_delele"
                        app:iconGravity="textStart"
                        app:iconSize="25dp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>